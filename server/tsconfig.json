{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist/server",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@shared_models/*": [
        "src/shared/models/*"
      ],
      "@config/*": [
        "src/config/*"
      ],      
      "@test/*": [
        "../e2e/*"
      ],     
    },
  },
  "include": [
    "./src/**/*"
    ],
  "exclude": ["node_modules", "dist"]
}
